@model EventBookingSystem.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>

<div>
    <h4>Are you sure you want to delete this event?</h4>
    <dl class="dl-horizontal">
        <dt>Event Name</dt>
        <dd>@Model.EventName</dd>
        <dt>Event Date</dt>
        <dd>@Model.EventDate.ToString("MM/dd/yyyy hh:mm tt")</dd>
        <dt>Venue</dt>
        <dd>@Model.Venue.VenueName</dd>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EventId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Event")" class="btn btn-secondary">Cancel</a>
    </form>
</div>